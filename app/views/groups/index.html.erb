<h1></h1>
<div class="container">
 <div class="page-header">
 <h1>Groups</h1>
</div>
</div>
<div class="container">
 <div class="row">
   <div class="col-md-6 col-md-offset-3">
     <div id="group-form" >
       <%= form_for(@group) do |f| %>
         <% if @group.errors.any? %>
           <div id="error_explanation">
             <ul>
             </ul>
           </div>
         <% end %>
         <div class="form-group">
           <h4><%= f.label :'Group'%></h4>
           <%= f.text_field :name, class: "form-control", placeholder: "Enter Group Name" %>
         </div>
         <%= f.submit "Add", class: 'btn btn-primary' %>
       <% end %>
     </div>
   </div>
 </div>
</div>
<br/>
<div class="container">
 <div class="row">
   <div class="col-md-4">
     <div class="panel panel-default">
       <div class="panel-body">
         <table class="table">
<caption><h2>My Groups</h2></caption>
  <tbody>
    <% @groups.each do |group| %>
             <% if group.user_id == current_user.id %>
             <tr>
               <td><%= group.name %></td>
               <td>
                 <%= link_to "Display", group,:class => "btn btn-warning", :method => :get %>
               </td>
               <td>
                 <%= link_to "Delete", group,:class => "btn btn-danger", :method => :delete , data: { confirm: 'Are you sure?' } %>
               </td>
             </tr>
             <% end %>
    <%end%>
  </tbody>
</table>
       </div>
     </div>
   </div>
   <div class="col-md-8">

     </div>
 </div>
</div>
</div>
