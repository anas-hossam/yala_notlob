
<p id="notice"><%= notice %></p>

<h1>Orders</h1>
<%= link_to 'New Order', new_order_path,id: "newOrder",class: "pull-right" %>

<table class="table table-responsive table-bordered table-hover">
  <thead>
    <tr>
      <th>Meal</th>
      <th>User</th>
      <th>Group</th>
      <th>Restaurant</th>
      <th>Joined</th>
      <th>Invited</th>
      <th>Status</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.meal %></td>
        <td><%= order.user.name %></td>
        <td><%= order.group.name %></td>
        <td><%= order.restaurant %></td>
        <td><%= order.joined %></td> <!-- must be reviewed  -->
        <td><%= order.invited %></td>
        <td>
          <%= order.status %>
          <% if order.user_id == current_user.id && order.status != "Finished" %>
              <span><input class="complete btn btn-primary" name="<%= order.id %>" value="Completed" type="submit"></span>
          <% end %>
        </td>
        <td><div class="media">
          <div class="media-left">
          <%= link_to image_tag(order.order_image.url(:thumb), class: 'media-object'), order.order_image.url, target: '_blank' %>          </div>
           <%= link_to 'Remove', order_path(order), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<script>
$(function (e) {
    $(".complete").on("click", function (e) {
        e.preventDefault()
        data=$(this).attr("name")
        console.log("order id ="+data)
        $.ajax({
            url: "/complete/" + data,
            method: "GET",
            success:function (success) {
                console.log("success")
            },
            error:function (error) {
                console.log("error")
            }

        })
    })
})
</script>
