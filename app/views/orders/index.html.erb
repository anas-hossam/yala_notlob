
<p id="notice"><%= notice %></p>

<h1>Orders</h1>
<%= link_to 'New Order', new_order_path,id: "newOrder",class: "pull-right" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Meal</th>
      <th>User</th>
      <th>Group</th>
      <th>Restaurant</th>
      <th>Joined</th>
      <th>Invited</th>
      <th>Status</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.meal %></td>
        <td><%= order.user.name %></td>
        <td><%= order.group.name %></td>
        <td><%= order.restaurant %></td>
        <td><%= order.joined %></td>
        <td><%= order.invited %></td>
        <td><%= order.status %></td>
        <td><div class="media">
          <div class="media-left">
          <%= link_to image_tag(order.order_image.url(:thumb), class: 'media-object'), order.order_image.url, target: '_blank' %>          </div>
           <%= link_to 'Remove', order_path(order), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
