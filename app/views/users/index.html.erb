<%- model_class = User -%>
<div class="container">
  <div class="page-header">
  <h1>Friends</h1>
</div>
</div>


<div class="container">
<div class="row">
<div class="col-md-6 col-md-offset-3">
  <%= form_for User.new , url: users_newfollow_path do |f| %>
  <p>
  <div class="form-group">
    <h4><%= f.label :'Your Friend E_mail' %></h4>
    <%= f.text_field :email, class: "form-control", placeholder: "enter e_mail" %>
  </div>
     <%= f.submit "Add", class: 'btn btn-primary' %>
</div>
</div>

  <!-- class :'btn btn-primary'  -->
</p>
<% end %><br/>

<div class="panel panel-default">
<div class="panel-heading">
  <div class="container">
    <h4>Friends List</h4>
  </div>
</div>
  <div class="panel-body">
  <br>
    <div class="row">
      <% @users.each do |user| %>
        <% unless user == current_user %>
        <% if current_user.following?(user) %>
          <div class="col-md-4">
            <div class="container">
             <img class='img-circle img-responsive'  width='50px' height='40px' src=""/>
              <h4><%= user.name %></h4>
              <span id="follow_user<%=user.id%>">
                <%= link_to(unfollow_user_path(user), :remote => true, :class => 'btn btn-danger') do %>
                  <i class="icon-remove icon-white"></i>
                  UnFriend
                <% end %><p></p>
            </div>
          </div>

        <%end %>
      <% end %>
    <% end %>
</div>
  </div>

</div>
</div>
