<h1>Order Details</h1>
<div id="all-items" style="float:right">

<table class="table table-hover" >
  <thead>
    <tr>
      <th>Item</th>
      <th>Person</th>
      <th>Order</th>
      <th>Amount</th>
      <th>Price</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="bodyItemsTable">
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.user.name %></td>
        <td><%= item.order.meal %></td>
        <td><%= item.amount %></td>
        <td><%= item.price %></td>
        <td><%= item.comment %></td>
        <td><%= link_to 'Show', order_item_path(@order,item) %></td>
        <td><%= link_to 'Edit', edit_order_item_path(@order,item) %></td>
        <td><%= link_to 'Destroy', order_item_path(@order,item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>



<div style="float:left;">
  <%= form_for([@order,@order.items.build]) do |f| %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <!-- <div class="field">
      <%= f.label :user_id %>
      <%= f.text_field :user_id %>
    </div> -->

    <div class="field">
      <%= f.label :amount %>
      <%= f.number_field :amount %>
    </div>

    <div class="field">
      <%= f.label :price %>
      <%= f.number_field :price %>
    </div>

    <div class="field">
      <%= f.label :comment %>
      <%= f.text_area :comment %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>


</div>
